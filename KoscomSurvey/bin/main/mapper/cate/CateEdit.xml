<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="survey.mapper.CateEditDao">
 
 	<select id="getCateList" resultType="survey.model.cateVO">
 		<![CDATA[
        	SELECT 
        		cate_no,
        		cate_name,
        		cate_info 
        	FROM 
        		cate 
        	ORDER BY cate_no DESC 
        ]]>
    </select>
 
    <insert id="addCate" parameterType="survey.model.cateVO">
    	<![CDATA[
        	INSERT INTO 
        		CATE(CATE_NO,CATE_NAME,CATE_INFO) 
        	VALUES
        		(#{cate_no},#{cate_name},#{cate_info})
        ]]>
    </insert>
    
    <delete id="delCate" parameterType="java.util.List" >
    	<![CDATA[
	    	DELETE CATE 
	    	WHERE cate_no in
	     ]]>
	    	<foreach item="cateNo" collection="delCateList" index="index" open="(" separator="," close=")">
		    	<![CDATA[	
		    		
    			#{cateNo}
		    			
		    	]]>
	        </foreach>
    </delete>

</mapper>



